{
  "custom/arch": {
    "format": "ÔåÉ",
    "tooltip": false
  },

  "hyprland/workspaces": {
    "on-scroll-up": "hyprctl dispatch workspace r-1",
    "on-scroll-down": "hyprctl dispatch workspace r+1",
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "format": "{icon}",
    "format-icons": {
      "empty": "",
      "active": "",
      "default": ""
    },
    "persistent-workspaces": {
      "*": 5
    }
  },

  "wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 26,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-right": "close"
  },

  "tray": {
    "icon-size": 21,
    "spacing": 10
  },

  "clock#main": {
    "format": "{:%H:%M}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "on-scroll": 1,
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-scroll-up": "tz_up",
      "on-scroll-down": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },

  "clock#date": {
    "format": "{:%b. %d}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "on-scroll": 1,
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-scroll-up": "tz_up",
      "on-scroll-down": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },

  "cpu": {
    "format": "Ôíº  {usage}%"
  },

  "memory": {
    "format": "Ôê£  {percentage}%"
  },

  "hyprland/language": {
    "format-en": "üá¨üáß",
    "format-ru": "üá∑üá∫",
    "format-hy": "üá¶üá≤",
    "on-click": "hyprctl switchxkblayout current next"
  },

  "network": {
    "format": "{ifname}",
    "format-wifi": "{icon}",
    "format-icons": ["Û±ö∂ ", "Û±öª ", "Û±ö∫ ", "Û±öΩ "],
    "format-ethernet": "Ôûñ  {ifname}",
    "format-disconnected": "Û±öµ ",
    "tooltip-format": "Ôûñ {ifname} via {gwaddri}",
    "tooltip-format-wifi": "Ôá´  {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\nUp: {bandwidthUpBits} Down: {bandwidthDownBits}",
    "tooltip-format-ethernet": "Ôûñ {ifname}\nIP: {ipaddr}\n up: {bandwidthUpBits} down: {bandwidthDownBits}",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 50,
    "on-click": "nm-connection-editor toggle"
  },

  "bluetooth#main": {
    "format": "Ôäì",
    "on-click": "blueman-manager"
  },

  "bluetooth#stat": {
    "format": "",
    "format-on": "on",
    "format-off": "off",
    "format-disconnected": "off",
    "format-disabled": "dead",
    "format-connected": "con",
    "on-click": "blueman-manager"
  },

  "battery#main": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon}",
    "format-charging": "Ôá¶",
    "format-icons": ["ÔâÑ ", "ÔâÉ ", "ÔâÇ ", "ÔâÅ ", "ÔâÄ "]
  },

  "battery#percent": {
    "format": "{capacity}%"
  },

  "pulseaudio#main": {
    "format": "{icon}",
    "format-muted": "ÔÄ¶ ",
    "scroll-step": 5,
    "format-icons": {
      "headphone": "ÔÄ• ",
      "default": ["ÔÄ¶ ", "ÔÄß ", "ÔÄ® "]
    },
    "on-click": "pavucontrol",
    "on-click-right": "easyeffects",
    "ignored-sinks": ["Easy Effects Sink"]
  },

  "pulseaudio#volume": {
    "format": "{volume}%",
    "scroll-step": 5,
    "on-click": "pavucontrol",
    "on-click-right": "easyeffects",
    "ignored-sinks": ["Easy Effects Sink"]
  },

  "backlight#main": {
    "format": "{icon}",
    "tooltip": false,
    "format-icons": [
      "Óéç",
      "Óèî",
      "Óèì",
      "Óèí",
      "Óèë",
      "Óèê",
      "Óèè",
      "Óèé",
      "Óèç",
      "Óèå",
      "Óèã",
      "Óèä",
      "Óèâ",
      "Óèà",
      "Óéõ"
    ],
    "scroll-step": 5
  },

  "backlight#percent": {
    "tooltip": false,
    "scroll-step": 5
  },

  "group/left": {
    "orientation": "horizontal",
    "modules": ["custom/arch", "hyprland/workspaces", "hyprland/window"]
  },

  "group/batt": {
    "orientation": "vertical",
    "modules": ["battery#main", "battery#percent"]
  },

  "group/audio": {
    "orientation": "vertical",
    "modules": ["pulseaudio#main", "pulseaudio#volume"]
  },

  "group/blight": {
    "orientation": "vertical",
    "modules": ["backlight#main", "backlight#percent"]
  },

  "group/bluetooth": {
    "orientation": "vertical",
    "modules": ["bluetooth#main", "bluetooth#stat"]
  },

  "group/system": {
    "orientation": "horizontal",
    "modules": [
      "group/audio",
      "group/blight",
      "group/batt",
      "group/bluetooth",
      "network"
    ]
  },

  "group/usage": {
    "orientation": "vertical",
    "modules": ["cpu", "memory"]
  },

  "group/custom_clock": {
    "orientation": "vertical",
    "modules": ["clock#main", "clock#date"]
  },

  "group/timelang": {
    "orientation": "horizontal",
    "modules": ["hyprland/language", "group/custom_clock"]
  }
}
