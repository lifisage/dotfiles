{
  "custom/arch": {
    "format": "",
    "tooltip": false
  },

  "hyprland/workspaces": {
    "on-scroll-up": "hyprctl dispatch workspace r-1",
    "on-scroll-down": "hyprctl dispatch workspace r+1",
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "format": "{icon}",
    "format-icons": {
      "empty": "",
      "active": "",
      "default": ""
    },
    "persistent-workspaces": {
      "*": 5
    }
  },

  "wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 26,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-right": "close"
  },

  "tray": {
    "icon-size": 21,
    "spacing": 10
  },

  "clock": {
    "format": "{:%I:%M %p}",
    "tooltip": false
  },

  "cpu": {
    "format": "  {usage}%  |"
  },

  "memory": {
    "format": "   {}%  |"
  },

  "disk": {
    "interval": 30,
    "format": "   {percentage_used}% ",
    "path": "/"
  },

  "hyprland/language": {
    "format-en": "🇬🇧",
    "format-ru": "🇷🇺",
    "format-hy": "🇦🇲",
    "on-click": "hyprctl switchxkblayout current next"
  },

  "network": {
    "format": "{ifname}",
    "format-wifi": "{icon}",
    "format-icons": ["󱚵 ", "󱚶 ", "󱚻 ", "󱚺 ", "󱚽 "],
    "format-ethernet": "  {ifname}",
    "format-disconnected": "Disconnected",
    "tooltip-format": " {ifname} via {gwaddri}",
    "tooltip-format-wifi": "  {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\nUp: {bandwidthUpBits} Down: {bandwidthDownBits}",
    "tooltip-format-ethernet": " {ifname}\nIP: {ipaddr}\n up: {bandwidthUpBits} down: {bandwidthDownBits}",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 50,
    "on-click": "nm-connection-editor toggle"
  },

  "bluetooth#main": {
    "format": "",
    "on-click": "blueman-manager"
  },

  "bluetooth#stat": {
    "format": "",
    "format-on": "on",
    "format-off": "off",
    "format-disconnected": "dsb",
    "format-connected": "con",
    "on-click": "blueman-manager"
  },

  "battery#main": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon}",
    "format-charging": "",
    "format-icons": [" ", " ", " ", " ", " "]
  },

  "battery#percent": {
    "format": "{capacity}%"
  },

  "pulseaudio#main": {
    "format": "{icon}",
    "scroll-step": 5,
    "format-icons": {
      "headphone": " ",
      "default": [" ", " ", " "]
    },
    "on-click": "pavucontrol",
    "on-click-right": "easyeffects",
    "ignored-sinks": ["Easy Effects Sink"]
  },

  "pulseaudio#volume": {
    "format": "{volume}%",
    "scroll-step": 5,
    "on-click": "pavucontrol",
    "on-click-right": "easyeffects",
    "ignored-sinks": ["Easy Effects Sink"]
  },

  "backlight#main": {
    "format": "{icon}",
    "tooltip": false,
    "format-icons": [
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      ""
    ],
    "scroll-step": 5
  },

  "backlight#percent": {
    "tooltip": false,
    "scroll-step": 5
  },

  "group/left": {
    "orientation": "horizontal",
    "modules": ["custom/arch", "hyprland/workspaces", "hyprland/window"]
  },

  "group/batt": {
    "orientation": "vertical",
    "modules": ["battery#main", "battery#percent"]
  },

  "group/audio": {
    "orientation": "vertical",
    "modules": ["pulseaudio#main", "pulseaudio#volume"]
  },

  "group/blight": {
    "orientation": "vertical",
    "modules": ["backlight#main", "backlight#percent"]
  },

  "group/bluetooth": {
    "orientation": "vertical",
    "modules": ["bluetooth#main", "bluetooth#stat"]
  },

  "group/system": {
    "orientation": "horizontal",
    "modules": [
      "group/audio",
      "group/blight",
      "group/batt",
      "group/bluetooth",
      "network"
    ]
  },

  "group/timelang": {
    "orientation": "horizontal",
    "modules": ["hyprland/language", "clock"]
  }
}
