{
  // Workspaces
  "hyprland/workspaces": {
    "on-scroll-up": "hyprctl dispatch workspace r-1",
    "on-scroll-down": "hyprctl dispatch workspace r+1",
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "format": "{}",
    "format-icons": {
      "urgent": "",
      "active": "",
      "default": ""
    },
    "persistent-workspaces": {
      "*": 5
    }
  },

  // Taskbar
  "wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 18,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-right": "close"
  },

  // Keyboard State
  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "ï€£",
      "unlocked": "ï‚œ"
    }
  },

  // System tray
  "tray": {
    "icon-size": 21,
    "spacing": 10
  },

  // Clock
  "clock": {
    "format": "{:%I:%M %p - %a}",
    "on-click": "ags -t calendar",
    "tooltip": false
  },

  // System
  "custom/system": {
    "format": "î‘³",
    "tooltip": true
  },

  // CPU
  "cpu": {
    "format": "/ C {usage}% ",
    "on-click": "kitty btop"
  },

  // Memory
  "memory": {
    "format": "/ M {}% ",
    "on-click": "kitty btop"
  },

  // Harddisc space used
  "disk": {
    "interval": 30,
    "format": "D {percentage_used}% ",
    "path": "/",
    "on-click": "kitty btop"
  },

  // language
  "hyprland/language": {
    "format-en": "ğŸ‡¬ğŸ‡§",
    "format-ru": "ğŸ‡·ğŸ‡º",
    "format-hy": "ğŸ‡¦ğŸ‡²"
  },

  // Group Hardware
  "group/hardware": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 300,
      "children-class": "not-memory",
      "transition-left-to-right": false
    },
    "modules": ["custom/system", "disk", "cpu", "memory"]
  },

  // Network
  "network": {
    "format": "{ifname}",
    "format-wifi": "ï‡«   {signalStrength}%",
    "format-ethernet": "ï–  {ifname}",
    "format-disconnected": "Disconnected",
    "tooltip-format": "ï– {ifname} via {gwaddri}",
    "tooltip-format-wifi": "ï‡«  {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\nUp: {bandwidthUpBits} Down: {bandwidthDownBits}",
    "tooltip-format-ethernet": "ï– {ifname}\nIP: {ipaddr}\n up: {bandwidthUpBits} down: {bandwidthDownBits}",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 50,
    "on-click": "nm-connection-editor toggle"
  },

  // Battery
  "battery": {
    "states": {
      // "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}%",
    "format-charging": "ï—§  {capacity}%",
    "format-plugged": "ï‡¦  {capacity}%",
    "format-alt": "{icon}  {time}",
    "format-icons": ["ï‰„ ", "ï‰ƒ ", "ï‰‚ ", "ï‰ ", "ï‰€ "]
  },

  // Pulseaudio
  "pulseaudio": {
    "scroll-step": 5,
    "format": "{icon}  {volume}%",
    "format-bluetooth": "{volume}% {icon}ïŠ” {format_source}",
    "format-bluetooth-muted": "ïš© {icon}ïŠ” {format_source}",
    "format-muted": "ïš© {format_source}",
    "format-source": "{volume}% ï„°",
    "format-source-muted": "ï„±",
    "format-icons": {
      "headphone": "ï€¥ ",
      "hands-free": "ï– ",
      "headset": "ï– ",
      "phone": "ï‚• ",
      "portable": "ï‚• ",
      "car": "ï†¹ ",
      "default": ["ï€¦", "ï€¨", "ï€¨"]
    },
    "on-click": "pavucontrol",
    "on-click-right": "easyeffects"
  },

  // Bluetooth
  "bluetooth": {
    "format": "ïŠ“ {status}",
    "format-disabled": "",
    "format-off": "",
    "interval": 30,
    "on-click": "blueman-manager",
    "format-no-controller": ""
  },

  // backlight:
  "backlight": {
    "format": "{icon} {percent}%",
    "format-icons": [
      "î",
      "î”",
      "î“",
      "î’",
      "î‘",
      "î",
      "î",
      "î",
      "î",
      "îŒ",
      "î‹",
      "îŠ",
      "î‰",
      "îˆ",
      "î›"
    ],
    "scroll-step": 1,
    "on-click": "sleep 0.5; ~/.config/hypr/scripts/hyprshade.sh",
    "on-click-right": "sleep 0.5; ~/.config/hypr/scripts/hyprshade.sh rofi"
  }
}
